<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}"
    android:background="@color/bg_register">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_above="@+id/btnLogout"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

    </LinearLayout>
    

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_logut_bg"
        android:text="@string/btn_logout"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/levenrecrdslogo" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:ems="10"
        android:textIsSelectable="true"
        android:id="@+id/txtScheduleDate"
        android:textColor="#ffffff"
        android:hint="Select the session date"
        android:textColorHint="#ffffff"
        android:textAlignment="center"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:contextClickable="true"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:ems="10"
        android:textIsSelectable="true"
        android:id="@+id/editTimeBooking"
        android:textColor="#ffffff"
        android:hint="Select the session date"
        android:textColorHint="#ffffff"
        android:textAlignment="center"
        android:contextClickable="true"
        android:layout_below="@+id/txtScheduleDate"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonClicked"
        android:text="Set Time"
        android:layout_below="@+id/editTimeBooking"
        android:background="@color/accent_material_light"
        android:layout_alignLeft="@+id/editTimeBooking"
        android:layout_alignStart="@+id/editTimeBooking"
        android:layout_alignRight="@+id/editTimeBooking"
        android:layout_alignEnd="@+id/editTimeBooking" />


</RelativeLayout>